@model MakePizza.Models.Cliente
@{
    ViewBag.Title = "Home";
}

<h2>Home</h2>

<div>
    @using (Html.BeginForm("Home", "Cliente",
                        FormMethod.Post,
                        new
                        {
                            @class = "form-horizontal",
                            enctype = "multipart/form-data"
                        }))
    {
        <fieldset>
            <legend>Conecte-se </legend>
            @Html.ValidationSummary(true, null,
                new { @class = "text-danger" })
            <div class="form-group">
                @Html.LabelFor(model => model.EmailCliente ,
                    new { @class = "control-label col-sm-2" })
                <div class="col-sm-10">
                    @Html.TextBoxFor(model => model.EmailCliente,
                        new
                        {
                            @class = "form-control",
                            @placeholder = "Email de Cliente"
                        })
                    @Html.ValidationMessageFor(model => model.EmailCliente, null,
                        new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.SenhaCliente,
                    new { @class = "control-label col-sm-3" })
                <div class="col-sm-10">
                    @Html.TextBoxFor(model => model.SenhaCliente,
                        new
                        {
                            @class = "form-control",
                            @placeholder = "Senha de Cliente",
                            @type = "password"
                        })
                    @Html.ValidationMessageFor(model => model.SenhaCliente, null,
                        new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <input type="submit" value="Login"
                           class="btn btn-primary">
                    @Html.ActionLink("Cadastrar", "CadastrarUsuario", "Usuario", new { @class = "btn btn-success" })
                </div>
            </div>

        </fieldset>
    }

</div>
